		//A method to read the lines of the two files 
		public String readlines()
		{
			String Line = "";
			try 
			{
				// a function to scan file1 and prints it 
				Scanner MySCanner = new Scanner(myFile1);
				while (MySCanner.hasNextLine())
				{
					Line = MySCanner.nextLine();
					System.out.println("the line is " + Line);
				}
		
		
				} 
				//error checker 
				catch (FileNotFoundException e)
				{
					e.printStackTrace();
					System.out.println("error caught" +e.getMessage());
				}
		
				//return the lines 
				return Line;
		
		}
	
	
		//a function to scan file2 and prints it 
		public String readlines1()
		{
			String Line = "";
			try
			{
				// a function to scan file1 and prints it 
				Scanner MySCanner = new Scanner(myFile2);
				while (MySCanner.hasNextLine())
				{
					Line = MySCanner.nextLine();
					System.out.println("the line is " + Line);
				}
			
	
			} 
			//error checker 
			catch (FileNotFoundException e) 
			{
				e.printStackTrace();
				System.out.println("error caught" +e.getMessage());
			}
		
			//return the lines 
			return Line;
		}
	
		public void actionPerformed1(ActionEvent e) 
		{
			if(e.getSource()==button1)
			
			{
		
				//by using the isEqual function, we can check if the topics 
				//of file 1 and file2 are equal or not. we are going to use
				//an if statement for this 
				//if the two files has the same topics then it should print it has same topics
				//otherwise print different topics.
				
				
				boolean SameTopic =isEqual(myFile1, myFile2);
				if (SameTopic)
				{
					System.out.println("The first file and the second file contain the same topic");
				
				}
				else 
				{
					System.out.println("The first file and the second file are different topics");
				}
	
	
			}
		}


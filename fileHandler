package assignment2;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.HashSet;
import java.util.Scanner;

public class fileHandler {
	
	String fileName;
	File MyFile;
	Scanner myScanner;
    PrintWriter pwInput;
    
    
 // Constructor
 	fileHandler (String fileName)
 	{
 		
 		this.fileName = fileName;
 		
 	}
 	
 // get a connection to the file
 	void connectToFile()
 	{
 		MyFile = new File(fileName);
 	}
 	
 	
 	public void openFile()
 	{
 		File MyFile  =new File(fileName);
 	}

 	
 	
 	//this is a method to read the words of the first file
 	public String readWord()
 	{
 		return fileName;
 			
 	}
 	
 	//A method to read the lines of the two files 
 	public String readlines()
 	{
 		
 		
 		HashSet<String> content = new HashSet<String>();
 		String Line = "";
 		try
 			{
 			 // a function to scan file and prints it 
 			Scanner MySCanner = new Scanner(MyFile);
 			while (MySCanner.hasNextLine())
 			{
 				Line = MySCanner.nextLine();
 				System.out.println("the line is " + Line);
 			}
 				myScanner.close();
 			
 			} 
 		    //error checker 
 			catch (FileNotFoundException e)
			{
 				e.printStackTrace();
 				System.out.println("error caught" +e.getMessage());
 			}
 			
 		 	finally
 		 	{
 		 		return Line;
 		 	}
 		
 	}
 			// get hold of a Print writer object
 			void getFileWriter()
 			{
 				try
 				{
 					pwInput = new PrintWriter(MyFile);
 				}
 				catch (FileNotFoundException e)
 				{
 					System.out.println("run time error " + e.getMessage());
 				}
    	
 			}	

 			// write a string to the file
 			void writeLineToFile(String line)
 			{
 				System.out.println(line);
 				pwInput.println(line);
 				pwInput.close();
 			}	
	}
